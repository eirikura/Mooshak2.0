@model ICollection<Mooshak2.Models.ViewModel.CourseViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>All courses:</h2>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Course name:</th>
            <th>Course description:</th>
        </tr>

    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(item.courseName,"CourseDetails", new { courseID = item.courseID })
                    </td>
                    <td>
                        @item.courseDescription
                    </td>
                </tr>
            }
        }
    </tbody>
</table>