@model Mooshak2.Models.ViewModel.UsersAndCoursesViewModel

@{
    ViewBag.Title = "Assign users";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h2>Assign to a course:</h2>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.LabelFor(model => model.selectedCourse, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <p> Select course </p>
                    @Html.DropDownListFor(m => m.courseName, Model.Courses)
            </div>
        
        </div>
        <div class="form-group">
            <div clss="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Assign user" />
            </div>
        </div>
}